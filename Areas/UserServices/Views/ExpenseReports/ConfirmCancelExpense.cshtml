@model ExpenseReport
@{
    Layout =null;
}

<form asp-action="ConfirmCancelExpense" onsubmit="return jQueryAjaxPost(this);">
    @{ 
        string message = null;

        if(Model.ConfirmId == Model.Id)
        {
            message = "Voulez vous vraiment confirmer cette note de frais : ";
        }
        else
        {
            message = "Voulez vous vraiment refusé cette note de frais : ";
        }
    }
    <div class="modal-body">
        @message<strong>@Model.Id</strong>
        <input type="hidden" asp-for="@Model.Id"/>
        <input type="hidden" asp-for="@Model.ConfirmId"/>
    </div>

    <div class="modal-footer">
        <div class="row form-group">
            <div class="col-md-6">
                <input type="submit" value="Valider" class="btn btn-info form-control" />
            </div>
            <div class="col-md-6">
                <a class="btn btn-warning form-control" asp-action="ShowExpensesinDemand">Annuler</a>
            </div>
        </div>    
    </div>
</form>
