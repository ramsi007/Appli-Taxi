@model IEnumerable<Produit>
<div class="m-5">
    <table class="table table-striped border text-center table-hover" id="example1">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.SalePrice)</th>
                <th>@Html.DisplayNameFor(m => m.PurchasePrice)</th>
                <th>@Html.DisplayNameFor(m => m.CategoryId)</th>
                <th>@Html.DisplayNameFor(m => m.Description)</th>
                <th>@Html.DisplayNameFor(m => m.TaxId)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>@Html.DisplayFor(m => item.SalePrice)</td>
                    <td>@Html.DisplayFor(m => item.PurchasePrice)</td>
                    <td>@Html.DisplayFor(m => item.Category.Name)</td>
                    <td>@Html.DisplayFor(m => item.Description)</td>
                    <td>@Html.DisplayFor(m => item.Tax.Discount)</td>

                    <td style="width:150px">
                        <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
                            <div class="btn-group">

                                <a onclick="showInPopup('@Url.Action("Details","Produits", new {id= item.Id}, Context.Request.Scheme)', 'Details')"
                                   class="btn btn-info text-white" style="cursor:pointer"><i class="fas fa-list-ul"></i></a>

                                <a onclick="showInPopup('@Url.Action("Edit","Produits", new {id= item.Id}, Context.Request.Scheme)', 'Modifier')"
                                   class="btn btn-success text-white" style="cursor:pointer"><i class="far fa-edit"></i></a>

                                <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                            </div>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
