@model IEnumerable<Tax>
<table  id="example1" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Discount)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Name)</td>
                <td>@Html.DisplayFor(m => item.Discount)</td>

                <td style="width:150px">
                    <div class="btn-group">
                        <a onclick="showInPopup('@Url.Action("Details","Taxes", new {id= item.Id}, Context.Request.Scheme)', 'Details')"
                           class="btn btn-info text-white" style="cursor:pointer"><i class="fas fa-list-ul"></i></a>

                        <a onclick="showInPopup('@Url.Action("Edit","Taxes", new {id= item.Id}, Context.Request.Scheme)', 'Modifier')"
                           class="btn btn-success text-white" style="cursor:pointer"><i class="far fa-edit"></i></a>

                        <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
                            <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                        </form>
                    </div>
                </td>

            </tr>
        }
    </tbody>

</table>

