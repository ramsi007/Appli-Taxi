@model IEnumerable<Proposal>

@{
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}

<div class="m-5">
    <div class="white-Background border p-2">
        <div class="row">
            <div class="col-md-6">
                <h3 class="text-info">Liste des Propositions</h3>
            </div>
            @if (User.IsInRole(SD.ManagerUser) || User.IsInRole(SD.VendorUser))
            {
                <div class="col-md-6 text-right">
                    <partial name="_CreateButtonPartial" />
                </div>
            }
        </div>
    </div>
</div>

@if (Model.Count() == 0)
{
    <div class="white-Background m-5 text-center">
        <h3 class="text-center p-5">
            AUCUNE PROPOSITION DANS CETTE LISTE ... !
        </h3>
    </div>

}
else
{
    <div id="view-all">
        @await Html.PartialAsync("_ViewAll")
    </div>

}

@section Scripts{

}


