@model ProposalDetailsViewModel
@{
    ViewData["Title"] = "ajouter au panier";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";}

<br />
<div class="form-group text-info">
    <i class="fab fa-product-hunt"></i>&nbsp;<span style="font-size:19px;font-weight:600">
        Produits et services
    </span>
</div>

<br />

<form asp-action="AddToCart" method="post">
    <div class="white-Background border m-3 p-3">
        <input type="hidden" asp-for="@Model.ShooppingCart.ApplicationUserId" />
        <input type="hidden" asp-for="@Model.Proposal.NumProposal" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="row col-md-12">
                <label asp-for="ProductsList" class="col-form-label text-dark h5"></label>
                <select id="ddlProduct" class="form-control" asp-for="ProposalDetail.ProduitId"
                        asp-items="@(new SelectList(Model.ProductsList,"Id", "Name"))">
                </select>
                <span asp-validation-for="ProposalDetail.ProduitId" class="text-danger"></span>
            </div>

            <div class="row col-md-12">
                <label asp-for="@Model.ShooppingCart.Description" class="col-form-label text-dark h5"></label>
                <textarea asp-for="@Model.ShooppingCart.Description" class="form-control"></textarea>
                <span asp-validation-for="@Model.ShooppingCart.Description" class="text-danger"></span>
            </div>

            <div class="row mb-4">
                <div class="col-md-4">
                    <label asp-for="@Model.ShooppingCart.Count" class="col-form-label text-dark h5"></label>
                    <input id="txtCount" asp-for="@Model.ShooppingCart.Count" class="form-control" />
                    <span asp-validation-for="@Model.ShooppingCart.Count" class="text-danger"></span>
                </div>
                <div class="row col-md-4">
                    <label asp-for="@Model.ShooppingCart.Price" class="col-form-label text-info h5">Prix (€)</label>
                    <input id="txtPrice" asp-for="@Model.ShooppingCart.Price" class="form-control" readonly />
                    <span asp-validation-for="@Model.ShooppingCart.Price" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label class="col-form-label text-dark h5">Taxe</label>
                    <input id="txtTax" asp-for="@Model.ShooppingCart.Tax" class="form-control" readonly />
                    <span asp-validation-for="@Model.ShooppingCart.Tax" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-md-6 col-sm-4">
                    <label asp-for="@Model.ShooppingCart.Remise" class="col-form-label text-info h5">Remise (€)</label>
                    <input id="txtRemise" asp-for="@Model.ShooppingCart.Remise" class="form-control" />
                    <span asp-validation-for="@Model.ShooppingCart.Remise" class="text-danger"></span>
                </div>
                <div class="col-md-6 col-sm-4">
                    <label class="col-form-label text-info h5">Montant (€)</label>
                    <input id="txtMontant" asp-for="@Model.ShooppingCart.Montant" class="form-control" readonly />
                    <span asp-validation-for="@Model.ShooppingCart.Montant" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12 offset-md-2 mt-3">
                <div class="row">
                    <div class="col-md-4 mb-2">
                        <button onclick="replaceDotByComma()" id="addtocart"  type="submit" class="btn btn-primary form-control">Ajouter au panier</button>
                    </div>
                    @if (Model.Proposal.NumProposal != null)
                    {
                        <div class="col-md-4">
                            <a class="btn btn-success form-control" asp-action="Create" asp-route-id="@Model.ShooppingCart.ApplicationUserId">Annuler</a>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-4">
                            <a class="btn btn-success form-control" asp-action="Create" asp-controller="Bills" asp-route-id="@Model.ShooppingCart.ApplicationUserId">Annuler</a>
                        </div>
                    }
                    @*<input class="btn btn-primary" value="Add"/>*@

                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function getPriceAndTax() {
            var selectedCategory = document.getElementById("ddlProduct").value;
            var total = 0;
            $price = $('#txtPrice');
            $tax = $('#txtTax');
            $montant = $('#txtMontant')
            $count = $('#txtCount')
            $remise = $('#txtRemise')
            $.ajax({
                url: '/Customer/Proposals/getPriceAndTax/' + selectedCategory,
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    $price.val(data.salePrice);
                    $tax.val(data.tax.discount);
                    total = ($count.val() * (parseFloat($price.val()) + (parseFloat($price.val())
                        * parseFloat($tax.val()) / 100))) - parseFloat($remise.val())

                     $montant.val(total);
                    //$price.val(total.toString().replace(".", ","));
                    
                    //var value = total.toString().replace(".", ",");
                    //console.log('price => ' + typeof $price.val());
                    //console.log('tax => ' + typeof $tax.val());
                    //console.log('montant => ' + typeof $montant.val());
                    //console.log('value  => ' + typeof value);
                    //console.log('total  => ' + typeof total);
                    //console.log('value  => ' +  value);
                },
                error: function (data) {
                    alert("erreur ...!")
                }
            });
        }

        $(document).ready(function () {
            getPriceAndTax();
        });

        $("#ddlProduct").on("change", function () {
            getPriceAndTax();
        });

        $("#txtCount").on("change", function () {
            getPriceAndTax();
        });
        $("#txtRemise").on("keypress", function () {
            getPriceAndTax();
        });
        $("#txtRemise").on("keyup", function () {
            getPriceAndTax();
        });
    </script>

