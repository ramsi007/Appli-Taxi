@model TypeAndCategoryViewModel

<br />
<div class="form-group">
    <h4 class="text-danger text-center">Détails du catégorie</h4>
</div>

<br />
@Html.HiddenFor(m => m.Category.Id)

<div class="white-Background">

    <div class="row">
        <div class="col-md-12 form-group">
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="ListTypes" class="col-form-label text-dark h5"></label>
                </div>
                <div class="col-md-8">
                    <select id="ddlCategories" class="form-control" asp-for="Category.TypeId"
                            asp-items="@(new SelectList(Model.ListTypes,"Id", "Name"))" disabled>
                        <option>Please select one</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 form-group">
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="Category.Name" class="col-form-label text-dark h5"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Category.Name" class="form-control" readonly />
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <partial name="_DetailsAndBackToListButtonsPartial" model="@Model.Category.Id" />
        </div>
    </div>
</div>